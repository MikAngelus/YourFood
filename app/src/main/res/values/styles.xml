<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="theme1.AppTheme" parent="Theme.MaterialComponents">

    </style>
    <style name="theme3.AppTheme." parent="Theme.MaterialComponents.NoActionBar">

    </style>
    <style name="theme2.AppTheme" parent="Theme.MaterialComponents.Light">

    </style>
    <style name="theme4.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>
    <style name="theme5.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#F74B4B4B</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>


</resources>
